{
  "compilerOptions": {
    "importHelpers": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es2022",
    "lib": ["es2022", "esnext", "dom"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist/",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "exclude": ["node_modules", "tests", "dist"]
}
